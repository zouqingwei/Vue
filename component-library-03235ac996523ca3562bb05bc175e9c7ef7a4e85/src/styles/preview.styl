.img-dialog
  .el-dialog
    &:hover .el-dialog__header .el-dialog__headerbtn
      opacity: 1
    .el-dialog__header
      padding: 0!important
      .el-dialog__headerbtn
        z-index: 100
        opacity: 0
        transition: all .2s linear
        .el-dialog__close
          color: #fff
    .el-dialog__body
      padding: 0!important
    .el-carousel
      position: unset
  .poster-wrapper
    height: 400px
    background-color: #2a2a2a
    .img-poster
      position: absolute;
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      max-width: 100%
      max-height: 100%